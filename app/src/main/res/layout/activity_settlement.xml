<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        android:padding="50dp">
        <!--Profile Image: Contains the actual cat image.-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ruisong" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ruisong says you lost."
        android:textSize="40dp"
        android:gravity="center"
        android:padding="30dp"
        android:textColor="@color/black"></TextView>
    <Button
        android:id="@+id/settlement_agree_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes, I agree"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp"
        android:backgroundTint="@color/tealPrimary"/>

    <Button
        android:id="@+id/settlement_disagree_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No, I do not agree"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/grey"
        android:padding="15dp"
        android:layout_marginTop="20dp"/>


</LinearLayout>