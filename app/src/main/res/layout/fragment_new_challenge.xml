<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newchallenge.NewChallengeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick a friend to challenge"
            android:textSize="40sp"
            android:textAlignment="center"
            android:padding="20dp"
            android:textColor="@color/black"
            android:background="@color/tealPrimary" />
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="20dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/new_challenge_friend1_image_holder"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:id="@+id/new_challenge_friend1_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/adi" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/new_challenge_friend1_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:text="Aditya Sriram"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/new_challenge_friend1_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:text="\@adityasriram" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:text="Aditya"
                    android:id="@+id/new_challenge_friend1"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:text="Mayra"
                    android:id="@+id/new_challenge_friend2"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:text="Divey"
                    android:id="@+id/new_challenge_friend3"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:text="Mallika"
                    android:id="@+id/new_challenge_friend4"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:text="Maliek"
                    android:id="@+id/new_challenge_friend5"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:text="Ziang Xiao"
                    android:id="@+id/new_challenge_friend6"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:text="Charles"
                    android:id="@+id/new_challenge_friend7"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:text="Brenna"
                    android:id="@+id/new_challenge_friend8"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:text="Andy"
                    android:id="@+id/new_challenge_friend9"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:text="Jed"
                    android:id="@+id/new_challenge_friend10"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="24dp"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
            
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>